@using DWM.Models.Repositories
@using App_Dominio.Repositories
@model DWM.Models.Repositories.ClienteViewModel

<div class="container">
    @using (Html.BeginForm("Delete", "Clientes", FormMethod.Post, new { @class = "form" }))
    {
        @Html.HiddenFor(info => info.dt_inclusao)
        @Html.HiddenFor(info => info.clienteId)
        @Html.HiddenFor(info => info.nome)
        @Html.HiddenFor(info => info.ind_tipo_pessoa)
        <div class="panel panel-primary" style="margin-top: 10px">
            <div class="panel-heading">
                <h2 class="panel-title">
                    Clientes - <small class="text-white">Exclusão de clientes</small>
                </h2>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(false, "", new { @style = "margin-left: -20px" })
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="nome">Nome</label>
                            @Html.TextBoxFor(info => info.nome, new { @class = "form-control input-sm", @maxlength = "60", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="ind_tipo_pessoa">Tipo</label>
                            <div class="input-group col-md-12">
                                @Html.DropDownListFor(m => m.ind_tipo_pessoa, App_Dominio.Enumeracoes.DropDownListEnum.TipoPessoa(), new { @class = "form-control input-sm", @onchange = "MudaPessoa()", @disabled = "disable" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="email">E-mail</label>
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control input-sm", @style = "text-transform: lowercase;", @maxlength = "100", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="cpf_cnpj">CPF/CNPJ</label>
                                    @Html.TextBoxFor(m => m.cpf_cnpj, new { @class = "form-control input-sm", @disabled = "disable" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="">CEP</label>
                                    <div class="input-group col-md-12">
                                        @Html.TextBoxFor(m => m.cep, new { @class = "form-control", @disabled = "disable" })
                                        <div class="input-group-btn">
                                            <a href="#" class="btn btn-primary link-default" onclick="BuscaCep2('cep', 'endereco', 'bairro', 'cidade', 'uf')"><span class="link-default">Busca Cep</span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="endereco">Endereço</label>
                            @Html.TextBoxFor(m => m.endereco, new { @class = "form-control input-sm", @maxlength = "50", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="complemento">Complemento</label>
                            @Html.TextBoxFor(m => m.complemento, new { @class = "form-control input-sm", @maxlength = "30", @disabled = "disable" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label class="control-label" for="cidade">Cidade</label>
                                    @Html.TextBoxFor(m => m.cidade, new { @class = "form-control input-sm", @maxlength = "25", @disabled = "disable" })
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label" for="uf">UF</label>
                                    @Html.TextBoxFor(m => m.uf, new { @class = "form-control input-sm", @maxlength = "2", @disabled = "disable" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="bairro">Bairro</label>
                            @Html.TextBoxFor(m => m.bairro, new { @class = "form-control input-sm", @maxlength = "25", @disabled = "disable" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label" for="fone1">Telefone Celular</label>
                            @Html.TextBoxFor(m => m.fone1, new { @class = "form-control input-sm", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label" for="fone2">Telefone Celular 2</label>
                            @Html.TextBoxFor(m => m.fone2, new { @class = "form-control input-sm", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label" for="fone3">Telefone Fixo</label>
                            @Html.TextBoxFor(m => m.fone3, new { @class = "form-control input-sm", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-2" id="div-sexo">
                        <div class="form-group">
                            <label class="control-label" for="sexo">Sexo</label>
                            @Html.DropDownListFor(m => m.sexo, App_Dominio.Enumeracoes.DropDownListEnum.Sexo(), new { @class = "form-control input-sm", @disabled = "disable" })
                        </div>
                    </div>
                    <div class="col-md-2" id="div-nascimento">
                        <div class="form-group">
                            <label class="control-label" for="dt_nascimento">Nascimento</label>
                            @Html.EditorFor(info => info.dt_nascimento, "DATE", new { identificador = "dt_nascimento", readOnly = "true" })
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label" for="observacao">Obsrvação</label>
                            @Html.TextAreaFor(m => m.observacao, 4, 1, new { @class = "form-control", @disabled = "disable" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-md-8 col-xs-12">
                        @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
                            new ButtonRepository() {    linkText = "Excluir",
                                                        actionName = "",
                                                        controllerName = "",
                                                        buttonType = "submit"
                                                    } ,
                            new ButtonRepository() {    linkText = "Cancelar",
                                                        actionName = "Browse",
                                                        controllerName = "Clientes",
                                                        buttonType = "link"
                                                    }
                        })
                    </div>
                    <div class="col-md-offset-4 hidden-xs">
                        ( * ) - Campo de preenchimento obrigatório
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $("#cep").mask("99999-999");
    $("#cpf_cnpj").mask("999.999.999-99");
    $("#fone1").mask("99 99999-9999");
    $("#fone2").mask("99 99999-9999");
    $("#fone3").mask("99 9999-9999");
    MudaPessoa();

    function MudaPessoa() {
        if ($("#ind_tipo_pessoa").val() == "PF") {
            $("#div-sexo").show();
            $("#div-nascimento").show();
            $("#cpf_cnpj").mask("999.999.999-99");
        }
        else {
            $("#div-sexo").hide();
            $("#div-nascimento").hide();
            $("#cpf_cnpj").mask("99.999.999/9999-99");
        }

    }
</script>