    <!-- Backstretch javascript -->
    @*<script type="text/javascript" src="~/Content/plugins/jquery.backstretch.min.js"></script>*@

    <!-- Appear javascript -->
    <script type="text/javascript" src="~/Content/plugins/jquery.appear.js"></script>

    <!-- Custom Scripts -->
    <script type="text/javascript" src="~/Content/js/custom.js"></script>

    <!-- Side-bar -->
    @*<link href="~/Content/css/simple-sidebar.css" rel="stylesheet">*@
</head>
<body>

    <div style="padding-top: 60px;">
        <div id="carregando" style="visibility: hidden; height: 0px; background-repeat: no-repeat; z-index: 5; background-image: url(../Content/images/loader.gif); background-position-x: 50%; background-position-y: 200px">
            <label>Carregando...</label>
        </div>
        <div class="container">
            @Html.Partial("_alerts")
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/scripts")
    @Scripts.Render("~/js")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $("#alerta").hide();
        $("#alerta").css("visibility", "visible");

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        function sidebar_click() {
            $("#sidebar-wrapper").show();
            $("#menu-toggle").click();
        }
    </script>

    <!-- JavaScript files placed at the end of the document so the pages load faster
    ================================================== -->
    <!-- Side-bar -->
    <script type="text/javascript" src="~/Content/plugins/jquery.min.js"></script>

