@model DWM.Models.Repositories.PropostaViewModel

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Comentários</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            @foreach (DWM.Models.Repositories.EsteiraComentarioViewModel com in Model.Comentarios)
            {
                <li class="list-group-item">
                    <p>
                        @com.nome
                        <span class="text-right">@com.tempo_comentario</span>
                    </p>
                    <p class="text-primary">
                        <b>@com.descricao_etapa</b>
                    </p>
                    <p>
                        @com.observacao
                    </p>
                </li>
            }
            <li class="list-group-item">
                <p>Novo Comentário</p>
                <form class="form-inline">
                    <input type="text" class="form-control">
                    <button type="button" class="btn btn-success">Salvar</button>
                </form>
            </li>
        </ul>
    </div>
</div>

