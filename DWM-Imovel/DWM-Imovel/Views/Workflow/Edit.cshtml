using DWM.Models.Repositories
@using App_Dominio.Repositories
@model DWM.Models.Repositories.PropostaViewModel
@{
    ViewBag.Title = "DWM-Imovel";
}

<div class="container-fluid">
    <div class="row">
        
        @* Dados do Cliente *@
        <div class="col-md-3">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <p><h3 class="panel-title">@Model.nome_cliente</h3></p>
                    <p>CPF: @Model.cpf_cnpj</p>
                </div>
                <div class="panel-body">
                    <b>Telefone: </b>@Model.fone1 / @Model.fone2
                </div>
            </div>
        </div>
        
        @* Dados do Empreendimento *@
        <div class="col-md-3">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <p><h3 class="panel-title">@Model.descricao_empreendimento</h3></p>
                    <p>@Model.torre</p>
                </div>
                <div class="panel-body">
                    <b>Coordenador: </b>@Model.nome_coordenador / @Model.login_coordenador
                </div>
            </div>
        </div>
         
        @* Etapas do Empreendimento *@
        <div class="col-md-3">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <p><h3 class="panel-title">@Model.descricao_etapa</h3></p>
                    desde <p>@Model.dt_proposta</p>
                </div>
                <div class="panel-body">
                    <b>Etapas: </b>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" style="width: @Model.percent_atual%">
                            <span class="sr-only">@Model.qte_dias_esteira dias</span>
                        </div>
                        <div class="progress-bar progress-bar-danger" style="width: @Model.percent_restnte%"></div>
                    </div>
                </div>
            </div>
        </div>
        
        @* Valor do Empreendimento *@
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <p><h3 class="panel-title">R$ @Model.valor</h3></p>
                    <p>Valor geral da venda</p>
                </div>
                <div class="panel-body">
                    <b>Comissão: </b>@Model.vr_comissao
                </div>
            </div>
        </div>


    </div>

    <div class="row">

        @* Dados da Proposta *@
        <div class="col-md-3" id="dados_proposta">
            @Html.Partial("_DadosProposta")
        </div>

        @* Esteira de Aprovação *@
        <div class="col-md-6" id="esteira">
            @Html.Partial("_Esteira")
        </div>


        @* Comentários *@
        <div class="col-md-3" id="comentarios">
            @Html.Partial("_Comentarios")
        </div>

    </div>

</div>