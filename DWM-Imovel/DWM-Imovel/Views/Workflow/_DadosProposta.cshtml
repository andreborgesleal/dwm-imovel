@model DWM.Models.Repositories.PropostaViewModel

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Dados da Proposta</h3>
    </div>
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item">
                <div>
                    <h3 class="text-right"><span class="label label-info">ID: @Model.propostaId</span></h3>
                    <h4>Data</h4>
                    <p>@Model.dt_proposta.ToShortDateString()</p>
                </div>
            </li>
            <li class="list-group-item">
                <p><h4>Gerente</h4></p>
                <p>@Model.nome</p>
                <p>@Model.login</p>
            </li>
            <li class="list-group-item">
                <p><h4>Corretor</h4></p>
                <p>@Model.nome_corretor1</p>
                <p>Email - @Model.fone_corretor1</p>
                <p></p>
            </li>
            <li class="list-group-item">
                <p><h4>Arquivos</h4></p>
                <p>
                    <ul class=list-unstyled>
                        @foreach (DWM.Models.Repositories.EsteiraContabilizacaoViewModel arq in Model.Arquivos)
                        {
                            <li>@Html.ActionLink(arq.arquivo, "#")</li>
                        }
                    </ul>
                </p>
                <p>
                    <form class="form-inline">
                        <input type="text" class="form-control">
                        <button value="Upload" class="btn btn-primary">Upload</button>
                    </form>
                </p>
            </li>
            <li class="list-group-item">
                <p><h2><b>Comissionamento</b></h2></p>
            </li>
        </ul>
    </div>
</div>