                </div>
                <div class="col-xs-1 col-md-1">
                    <input class="form-control input-sm" type="text" placeholder="Valor">
                </div>
            </div>


            <div class="form-group">

                <div class="col-xs-1 col-md-4">
                    <input class="form-control input-sm" type="text" placeholder="Modelo">
                </div>
                <div class="col-xs-1 col-md-1">
                    <input class="form-control input-sm" type="text" placeholder="Unidade">
                </div>
                <div class="col-xs-1 col-md-1">
                    <input class="form-control input-sm" type="text" placeholder="Comissão">
                </div>
                <div class="col-xs-1 col-md-3">
                    <input class="form-control input-sm" type="text" placeholder="Etapa">
                </div>
                <div class="col-xs-1 col-md-3">
                    <input class="form-control input-sm" type="text" placeholder="Data da Etapa">
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8 col-xs-12">
                @Html.Partial("_defaultListButtons",
                        new List<ButtonRepository>
                        {
